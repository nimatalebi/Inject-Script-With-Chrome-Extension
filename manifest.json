{
  "name": "Inject-Script-whit-Chrome-Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Injecting stuff",
  "homepage_url": "https://github.com/nimatalebi/Inject-Script-whit-Chrome-Extension",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Inject!"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "content_scripts": [
		{
		 "matches": ["https://*/*","http://*/*"],
		 "js": ["script.js"]
		}
	],
  "web_accessible_resources": ["script.js"]
}
